{
  "manifest_version": 3,
  "name": "AI YouTube Tutor - Summarizer & Quiz Generator",
  "version": "1.0",
  "description": "Enhance YouTube learning with AI-powered summaries, quizzes, and tutoring using Gemini API. Perfect for students & educators!",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    },
    "default_title": "AI YouTube Tutor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
  }
}